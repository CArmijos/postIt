<br><br>
{{#if respuesta_ok }}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{respuesta_ok }}
    <button
      type="button"
      class="close"
      data-dismiss="alert"
      aria-label="Cerrar" ><span aria-hidden="true">&times;</span>
      </button>
  </div>
{{/if}}

{{#if respuesta_fallo}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{respuesta_fallo}}
    <button
      type="button"
      class="close"
      data-dismiss="alert"
      aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
  </div>
{{/if}}

{{#if error}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{error}}
    <button
      type="button"
      class="close"
      data-dismiss="alert"
      aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
  </div>
{{/if}}