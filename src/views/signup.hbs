<br>

{{#each errores}}
    <!-- Controla Errores - Mensaje de Alerta -->
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>{{mensaje}}</strong> 
    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/each}}

<div class="row">
  <div class="col-sm-4 mx-auto">
    <div class="card">
      <div class="card-header">
        <h4><b>Registrar Cuenta</b></h4> 
      </div>
      <img class="rounded-circle mx-auto d-block logo m-4" src="/images/logo_3.jpg" alt="Logo">
      <div class="card-body">
        <form action="/signup" method="POST">
          <div class="form-group">
              <input type="text" class="form-control" name="nombre" placeholder="Nombre" value="{{nombre}}">
          </div>
          <div class="form-group">
              <input type="email" class="form-control" name="correo" placeholder="Email"  value="{{correo}}">
          </div>
          <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Password"  value="{{password}}">
          </div>
          <div class="form-group">
             <input type="password" class="form-control" name="confirma_password" placeholder="Confirma Password"  value="{{confirma_password}}">
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            SignUp 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>