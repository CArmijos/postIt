<br><br><br>

{{#each errores}}
    <!-- Controla Errores - Mensaje de Alerta -->
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>{{mensaje}}</strong> 
    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/each}}

<div class="col-md-4 mx-auto mt-4" >
    <div class="card">
        <div class="card-header">
            <H3>Crear un PostIT...</H3>
        </div>
        <br>
        <card class="card-body">
            <form action='/postItAgregar' method="POST">

                <div class="from-group green-border-focus">
                    <label for="titulo"><small><b>Titulo</b></small></label><br>
                    <input type="text" name="titulo" class="form-control" placeholder="Ingrese Título de la Tarea..." autofocus />
                </div>

                <br>

                <div class="from-group green-border-focus">
                    <label for="titulo"><small><b>Descripción</b></small></label><br>
                    <textarea  name="descripcion" class="form-control" placeholder="Ingrese Descripción de la Tarea..."></textarea>
                </div>
                <br>
                <button type="submit" class="btn btn-primary btn-block">Guardar PostIT</button>
            </form>
        </card>
    </div>
</div>
